@if (IsLoading)
{
	<MudProgressLinear Style="margin-top:48px;z-index:10000" Color="Color.Error" Value="100" Class="position-fixed" />

}

	@code {
	[Parameter]
	public bool IsLoading { get; set; }
	public int Value { get; set; }

	bool _disposed;
	public void Dispose() => _disposed = true;
	public async void SimulateProgress()
	{
		Value = 0;
		do
		{
			if (_disposed)
			{
				return;
			}

			Value += 14;
			StateHasChanged();
			await Task.Delay(500);

		} while (Value < 100);

		SimulateProgress();
	}

	protected override void OnInitialized() => SimulateProgress();

}

